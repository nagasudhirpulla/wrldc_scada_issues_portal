@model List<ScadaIssuesPortal.Core.Entities.ReportingCase>
@using ScadaIssuesPortal.Core;
@using ScadaIssuesPortal.Core.Entities;
@using MoreLinq.Extensions;
@{
    ViewData["Title"] = "Reporting Cases";
}

<p>
    <a asp-controller="ReportingCases" asp-action="Create">Report New Issue</a>
</p>

<table class="table table-bordered table-hover table-responsive-md">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Creation Time
            </th>
            <th>
                Created By
            </th>
            <th>
                Issue Time
            </th>
            <th>
                Issue Info
            </th>
            <th>
                Comments
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ResolutionTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ConcernedAgencies)
            </th>
            <th>
                Status
            </th>
            <th>
                Last Updated Time
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            CommentTag Tag = (item.Comments.Count() > 0) ? item.Comments.MaxBy(i => i.Created).First().Tag : CommentTag.Normal;
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.CreatedAt.ToString("dd MMM yyyy HH:mm")
                </td>
                <td>
                    @item.CreatedBy.UserName
                </td>
                <td>
                    @item.DownTime.ToString("dd MMM yyyy HH:mm")
                </td>
                <td>
                    @foreach (var caseItem in item.CaseItems)
                    {
                        <span>
                            @($"{caseItem.Question} - {caseItem.Response}")
                        </span>
                        <br>
                    }
                </td>
                <td>
                    @foreach (var comm in item.Comments)
                    {
                        <span>
                            @(comm.Tag.Equals(CommentTag.Normal) ? $"{comm.Comment}" : $"({comm.Tag.ToString()}) - {comm.Comment}")
                        </span>
                        <br>
                    }
                </td>
                <td>
                    @((item.ResolutionTime == default) ? "" : item.ResolutionTime.ToString("dd-MMM-yyyy HH:mm"))
                </td>
                <td>
                    @(item.ConcernedAgencies.Count > 0 ? item.ConcernedAgencies.Select(concerned => concerned.User.UserName).Aggregate((i, j) => i + ", " + j) : "")
                </td>
                <td>
                    @(Tag.Equals(CommentTag.Normal) ? "" : Tag.ToString())
                </td>
                <td>
                    @item.UpdatedAt.ToString("dd-MMM-yyyy HH:mm")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    @if (User.IsInRole(SecurityConstants.AdminRoleString))
                    {
                        <span>|</span><a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
